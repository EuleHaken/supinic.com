doctype html
html
    head
        block topheader
        include ./header.pug
        include ./navigation.pug

        style.
            li.invocation {
                background-color: inherit;
                cursor: pointer;
                margin: 0;
            }

            li.invocation.selected {
                background-color: #264422;
            }

            li[summary=icon] {
                height: 32px;
                background-repeat: no-repeat;
                background-position: left;
            }

            ul#invocations-list {
                grid-area: 1/1/3/2;
            }

            ul#summary {
                grid-area: 1/2/2/3;
            }

            ul#buttons {
                grid-area: 2/2/3/3;
            }

            ul#buttons > li {
                padding-bottom: 5px;
            }

            div#base {
                display: grid;
                grid-template-columns: auto 200px;
                grid-template-rows: 200px auto;
            }

        script(type="module" src="/static/js/toa-calculator.js")

    body
        block navigation
        div(id="base")
            ul(id="invocation-list")
            ul(id="summary")
                li(summary="icon")
                li(summary="level")
                li(summary="damage")
                li(summary="hitpoints")
                li(summary="defence")
                li(summary="accuracy")
            ul(id="buttons")
                li
                    button(id="button-clear").
                        Clear invocations
                li
                    button(id="button-import").
                        Import selection
                li
                    button(id="button-export").
                        Export selection
