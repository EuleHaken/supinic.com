doctype html
html
	head
		block topheader
		include ./header.pug
		include ./navigation.pug
			
		script(src="/public/js/Chart.js")
		script.
			const zf2 = (number) => ("00" + number).slice(-2);
			const now = new Date();

			const hours = Array(25).fill(0).map(() => {
				let val = zf2(now.getHours()) + ":00";
				now.setHours(now.getHours() - 1);
				return val;
			}).reverse();

			$(document).ready(function() {
				const config = (name) => ({
					legends: {
						display: false
					},
					responsive: true,
					title: {
						display: true,
						text: name,
						fontSize: 30,
						fontFamily: "Arial"
					},
					tooltips: {
						mode: "index",
						intersect: false,
					},
					hover: {
						mode: "nearest",
						intersect: true
					},
					scales: {
						xAxes: [{
							display: true,
							ticks: {
								min: 0,
								minRotation: 45
							},
							scaleLabel: {
								display: true,
								labelString: "Local time"
							}
						}],
						yAxes: [{
							display: true,
							scaleLabel: {
								display: true,
								labelString: "Messages"
							}
						}]
					}
				});

				new Chart(document.getElementById("hour-chart").getContext("2d"), {
					type: "line",
					data: {
						labels: hours,
						datasets: [{
							label: "Total",
							backgroundColor: "rgba(0, 0, 0, 0)",
							borderColor: "rgb(0, 200, 0)",
							data: !{hourData}
						}]
					},
					options: config("Messages per hour")
				});

				new Chart(document.getElementById("day-chart").getContext("2d"), {
					type: "line",
					data: {
						labels: !{dayLabels},
						datasets: [{
							label: "Total",
							backgroundColor: "rgba(0, 0, 0, 0)",
							borderColor: "rgb(0, 0, 200)",
							data: !{dayData}
						}]
					},
					options: config("Messages per day")
				});

			});
		meta(charset="UTF-8")
	body
		block navigation
		center 
			h1 #!{channelName}
		div
			canvas#hour-chart
		br
		div
			canvas#day-chart