doctype html
html
	head
		block topheader
		include ./header.pug
		include ./datatables.pug
		include ./navigation.pug
		script.
			$(document).ready(() => {
				const type = `!{favourite}`;
				const spinner = `<img alt="Loading" height=32 width=32 src="/public/img/ppCircle.gif">`;
				const active = `<img alt="Favourite" height=32 width=32 src="/public/img/favourite-star.png">`;
				const inactive = `<img alt="Not favourite" height=32 width=32 src="/public/img/favourite-star-off.png">`;
				const noLogin = `<i>Log in to use the favourite button!</i>`;
				let available = true;

				if (type === "active") {
					$("#favourite").html(active);
				}
				else if (type === "inactive") {
					$("#favourite").html(inactive);
				}
				else if (type === "none") {
					available = false;
					$("#favourite").html(noLogin);
				}

				$("#favourite").click(async () => {
					if (!available) {
						return;
					}

					$("#favourite").html(spinner);
					available = false;

					const { data } = await fetch("/api/track/favourite/track/#{ID}", { method: "PUT" })
						.then(i => i.json())
						.catch(i => i.json());

					available = true;
					
					if (data.statusCode === 403) {
						$("#favourite").html(noLogin);
					}
					else if (data.active === true) {
						$("#favourite").html(active);
					}
					else if (data.active === false) {
						$("#favourite").html(inactive);
					}
				});
			});
		meta(charset="UTF-8")
		style(type="text/css").
			td > a {
				display: block;
			}

			div#favourite {
				cursor: pointer;
			}

			td.key {
				vertical-align: middle !important;
			}

			#track_wrapper {
				padding: 10px 40px 0 40px !important;
			}
	body
		block navigation
		
		div(id="track_wrapper")
			table(id="track", class="table table-striped table-bordered")
				tbody
					tr
						td.key Favourite
						td.value
							div(id="favourite")

					for value, key in data
						- if (key === "Related tracks") {
							tr
								td.key
									b #{key}
								td.value
									table.rowTable
										tbody
											thead
												tr
													th Track
													th is a/an
													th of
										each track in value
											tr
												td !{track.from}

												- if (track.notes !== null) {
													td(title=track.notes)
														u #{track.relationship}
												- }
												- else {
													td #{track.relationship}
												- }

												td !{track.to}
						- }
						- else if (key === "Authors") {
							tr
								td.key
									b #{key}
								td.value
									table.rowTable
										tbody
											thead
												tr
													th Author
													th Role
										each author in value
											tr
												td !{author.name}
												td #{author.role}
						- }
						- else {
							tr
								td.key
									b #{key}
								td.value !{value}
						- }